    "db:reset": "./scripts/db-manage.sh reset",
    "db:help": "./scripts/db-manage.sh help",
    "setup": "./scripts/db-manage.sh start && sleep 30 && npm run dev",
    "setup:full": "./scripts/db-manage.sh start && sleep 30 && ./scripts/db-manage.sh backup && npm run dev",
    "test:api": "curl -s http://localhost:4000/api/test-db | jq .",
    "backup:auto": "./scripts/db-manage.sh backup && echo \"Backup completado: $(date)\"",
