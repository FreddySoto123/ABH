{
  "name": "abh",
  "version": "1.0.0",
  "description": "Academia Boliviana de Historia Militar - Sistema de gestiÃ³n",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon server/index.js",
    "start": "node server/index.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs",
    "db:start": "node -e \"const os=require('os'); const {spawn}=require('child_process'); const cmd=os.platform()==='win32'?'scripts\\\\db-manage.bat':'./scripts/db-manage.sh'; spawn(cmd,['start'],{stdio:'inherit',shell:true});\"",
    "db:stop": "node -e \"const os=require('os'); const {spawn}=require('child_process'); const cmd=os.platform()==='win32'?'scripts\\\\db-manage.bat':'./scripts/db-manage.sh'; spawn(cmd,['stop'],{stdio:'inherit',shell:true});\"",
    "db:status": "node -e \"const os=require('os'); const {spawn}=require('child_process'); const cmd=os.platform()==='win32'?'scripts\\\\db-manage.bat':'./scripts/db-manage.sh'; spawn(cmd,['status'],{stdio:'inherit',shell:true});\"",
    "db:backup": "node -e \"const os=require('os'); const {spawn}=require('child_process'); const cmd=os.platform()==='win32'?'scripts\\\\db-manage.bat':'./scripts/db-manage.sh'; spawn(cmd,['backup'],{stdio:'inherit',shell:true});\"",
    "db:restore": "node -e \"const os=require('os'); const {spawn}=require('child_process'); const cmd=os.platform()==='win32'?'scripts\\\\db-manage.bat':'./scripts/db-manage.sh'; spawn(cmd,['restore',process.argv[2]||''],{stdio:'inherit',shell:true});\"",
    "db:connect": "node -e \"const os=require('os'); const {spawn}=require('child_process'); const cmd=os.platform()==='win32'?'scripts\\\\db-manage.bat':'./scripts/db-manage.sh'; spawn(cmd,['connect'],{stdio:'inherit',shell:true});\"",
    "db:logs": "node -e \"const os=require('os'); const {spawn}=require('child_process'); const cmd=os.platform()==='win32'?'scripts\\\\db-manage.bat':'./scripts/db-manage.sh'; spawn(cmd,['logs'],{stdio:'inherit',shell:true});\"",
    "db:reset": "node -e \"const os=require('os'); const {spawn}=require('child_process'); const cmd=os.platform()==='win32'?'scripts\\\\db-manage.bat':'./scripts/db-manage.sh'; spawn(cmd,['reset'],{stdio:'inherit',shell:true});\"",
    "db:help": "node -e \"const os=require('os'); const {spawn}=require('child_process'); const cmd=os.platform()==='win32'?'scripts\\\\db-manage.bat':'./scripts/db-manage.sh'; spawn(cmd,['help'],{stdio:'inherit',shell:true});\"",
    "db:start:linux": "./scripts/db-manage.sh start",
    "db:start:windows": "scripts\\db-manage.bat start",
    "db:stop:linux": "./scripts/db-manage.sh stop",
    "db:stop:windows": "scripts\\db-manage.bat stop",
    "db:backup:linux": "./scripts/db-manage.sh backup",
    "db:backup:windows": "scripts\\db-manage.bat backup",
    "setup": "npm run db:start && node -e \"setTimeout(()=>spawn('npm',['run','dev'],{stdio:'inherit',shell:true}),30000)\"",
    "setup:full": "npm run db:start && node -e \"setTimeout(()=>{spawn('npm',['run','db:backup'],{stdio:'inherit',shell:true}); setTimeout(()=>spawn('npm',['run','dev'],{stdio:'inherit',shell:true}),5000)},30000)\"",
    "test:api": "curl -s http://localhost:4000/api/test-db | jq .",
    "backup:auto": "npm run db:backup && node -e \"console.log('Backup completado:', new Date().toISOString())\"",
    "restore:latest": "npm run db:restore ./db/backups/latest_backup.sql"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FreddySoto123/ABH.git"
  },
  "keywords": [
    "historia",
    "militar",
    "bolivia",
    "academia",
    "museo",
    "virtual"
  ],
  "author": "FreddySoto123",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FreddySoto123/ABH/issues"
  },
  "homepage": "https://github.com/FreddySoto123/ABH#readme",
  "dependencies": {
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}